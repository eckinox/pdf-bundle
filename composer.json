{
    "name": "eckinox/pdf-bundle",
    "description": "A Symfony bundle to generate PDFs from Twig templates.",
    "type": "symfony-bundle",
    "require": {
        "php": ">=8.1.10",
        "eckinox/php-puppeteer": "^1.0",
        "symfony/http-foundation": "^5.4|^6.0",
        "symfony/http-kernel": "^5.4|^6.0",
        "symfony/string": "^5.4|^6.0",
        "twig/twig": "^3.8"
    },
    "require-dev": {
        "eckinox/eckinox-cs": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Eckinox\\PdfBundle\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Ã‰mile Perron",
            "email": "contact@emileperron.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "eckinox/installer-plugin": true,
            "phpstan/extension-installer": true
        }
    }
}
